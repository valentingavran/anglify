{
  "root": true,
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "extends": [
        "@anexia/eslint-config-marine/prettier/node",
        "@anexia/eslint-config-marine/prettier/angular"
      ]
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "@anexia/eslint-config-marine/prettier/angular"
      ]
    }
  ],
  "rules": {
    "prettier/prettier": [
      2,
      {},
      {
        "usePrettierrc": true
      }
    ]
  }
}
